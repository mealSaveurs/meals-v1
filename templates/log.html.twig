<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MealSaveurs{% endblock %}</title>
    <link rel="stylesheet" href="https://use.typekit.net/lsx5uqh.css">
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    <link rel="icon" href="{{ asset("assets/icons/logo-mealsaveurs.ico") }}" type="image/x-icon" />
    <link rel="stylesheet" href="{{ asset("assets/css/global.css") }}">
    <link rel="stylesheet" href="{{ asset("assets/css/log.css") }}">
    <link rel="stylesheet" href="{{ asset("assets/css/conditions.css") }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div id="register">
    <!--Block left -->
    <div class="block-left">
        <div class="logo-register"><img src="{{ asset("assets/images/logo-orange.svg") }}" alt="Logo MealSaveurs" width="150px"></div>
        <div class="message-flash">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
        </div>
        <!-- FORM -->
        <div class="form">

            {% if app.request.get('_route') == 'app_login' %}
            <!-- Head -->
           <div class="form-title">
                <a href="{{ path("app_login") }}" class="login-active">Se connecter</a>
                <div class="separator"></div>
                <a href="{{ path("app_register") }}" class="register">S'inscrire</a>
           </div>
                <div><p class="slogan">Agrandit ta communauté, partage tes compétences culinaires & organise ton planning de la semaine !</p></div>
            {% endif %}
            {% if app.request.get('_route') == 'app_register' %}
            <div class="form-title">
                <a href="{{ path("app_login") }}" class="login">Se connecter</a>
                <div class="separator"></div>
                <a href="{{ path("app_register") }}" class="register-active">S'inscrire</a>
            </div>
                <div><p class="slogan">Agrandit ta communauté, partage tes compétences culinaires & organise ton planning de la semaine !</p></div>
            {% endif %}


            <!-- form -->
            {% block body %}{% endblock %}
        </div>
    </div>
    <!--Block right -->
    <div class="block-right"></div>
</div>
    <script src="{{ asset("assets/js/global.js") }}"></script>
</body>
</html>
